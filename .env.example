# BioGuard AI Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ============== Environment ==============
# Options: development, production, testing
ENVIRONMENT=development

# ============== API Keys (REQUIRED) ==============
# Get your keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Google Gemini: https://ai.google.dev/
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ============== Translation API (Optional) ==============
# For auto-translation of results
# Get key from: https://cloud.google.com/translate
TRANSLATION_API_KEY=your_google_translate_api_key_here

# ============== Security (REQUIRED for Production) ==============
# Generate a secure secret with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
# This is REQUIRED in production, will raise error if missing
JWT_SECRET_KEY=your_jwt_secret_key_here

# Encryption key for sensitive data
# Generate with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
ENCRYPTION_KEY=your_encryption_key_here

# ============== OAuth Configuration ==============
# Google OAuth - Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8501/auth/google/callback

# Apple Sign In - Get from: https://developer.apple.com/account/resources
APPLE_CLIENT_ID=com.yourcompany.bioguardai
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
# Base64 encoded .p8 private key (cat AuthKey_XXX.p8 | base64)
APPLE_PRIVATE_KEY=base64_encoded_private_key_here
APPLE_REDIRECT_URI=http://localhost:8501/auth/apple/callback

# ============== Database Paths ==============
DATABASE_PATH=./data/bioguard.db
VECTOR_DB_PATH=./data/chroma_db
GRAPH_DB_PATH=./data/graph_db

# ============== Feature Flags ==============
# Enable/disable features (true/false)
FEATURE_LIVE_AR_ENABLED=true
FEATURE_KNOWLEDGE_GRAPH_ENABLED=true
FEATURE_DIGITAL_TWIN_ENABLED=true
FEATURE_SPECTRAL_ANALYSIS_ENABLED=true
FEDERATED_LEARNING_ENABLED=true

# ============== Performance Settings ==============
# API rate limiting (requests per minute)
# Development: 100, Production: 60
MAX_API_CALLS_PER_MINUTE=60

# Caching
CACHE_ENABLED=true
# Cache TTL in seconds (development: 1800, production: 7200)
CACHE_TTL_SECONDS=3600

# File uploads (MB)
MAX_FILE_SIZE_MB=10

# ============== LiveVision Settings ==============
# Detection FPS (1-3 recommended for battery efficiency)
DETECTION_FPS=2

# Analysis cooldown (seconds between auto-analyses)
ANALYSIS_COOLDOWN=3

# Tesseract OCR path (Windows only, if not in PATH)
# TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# ============== Language & Translation ==============
# Default language: ar (Arabic), en (English), fr (French), es (Spanish), de (German)
DEFAULT_LANGUAGE=ar

# Auto-translate results to user's language
AUTO_TRANSLATE_RESULTS=true

# ============== Logging ==============
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
